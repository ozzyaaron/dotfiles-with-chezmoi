{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_ZOXIDE": "1"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/focus-tmux.sh"
          }
        ]
      }
    ]
  },
  "permissons": {
    "allow": [
      "Bash(ls:*)",
      "Bash(tree:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/Users/aarontodd/.claude/statusline-command.sh"
  }
}
